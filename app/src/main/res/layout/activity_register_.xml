<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_linear_layout_gradient"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:textColor="#000000"
        android:textSize="28sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/LL_Login_Page_1">


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:hint="Enter Name "
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/Name_Edit_Text"
            android:textColorHint="#A9A9A9"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:hint="Your Contact No. "
            android:inputType="phone"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:id="@+id/Your_Contact_Number"
            android:layout_marginBottom="20dp"
            android:textColorHint="#A9A9A9"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:hint="Emergency Contact No. "
            android:inputType="phone"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:id="@+id/Emergency_Contact_Number"
            android:layout_marginBottom="20dp"
            android:textColorHint="#A9A9A9"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:hint="Enter Email "
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/Email_ID_Edit_Text"
            android:textColorHint="#A9A9A9">
        </EditText>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Enter Password "
            android:inputType="textPassword"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/Password_Edit_Text"
            android:textColorHint="#A9A9A9"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Re-Type Password "
            android:inputType="textPassword"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:id="@+id/Re_Password_Edit_Text"
            android:layout_marginBottom="20dp"
            android:textColorHint="#A9A9A9">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/LL_Login_Page_2">
        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:id="@+id/create"
            android:textColor="#ffffff"
            android:background="@drawable/credentials_button"
            android:text="Create"/>
    </LinearLayout>

</LinearLayout>