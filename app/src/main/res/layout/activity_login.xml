<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_linear_layout_gradient"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/output_onlinepngtools">

    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/LL_Login_Page_1">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:hint="Enter Email "
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="40dp"
            android:paddingRight="12dp"
            android:id="@+id/Email_ID_Edit_Text_Login"
            android:textColorHint="#A9A9A9">
        </EditText>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/credentials_edit_text"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Enter Password "
            android:inputType="textPassword"
            android:textAlignment="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="60dp"
            android:paddingRight="12dp"
            android:id="@+id/Password_Edit_Text_Login"
            android:textColorHint="#A9A9A9">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL_Login_Page_2">

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="0dp"
            android:id="@+id/login_button"
            android:background="@drawable/credentials_button"
            android:text="Login"/>
        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/register_button"
            android:textColor="#ffffff"
            android:onClick="open_register_activity"
            android:background="@drawable/credentials_button"
            android:text="Register Here"/>
    </LinearLayout>

</LinearLayout>